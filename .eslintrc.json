{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true
    },
    "parser": "@typescript-eslint/parser",
    "overrides": [
        {
            "files": ["*.ts", "*.tsx"],
            "extends": [
                "eslint:recommended",
                "plugin:@typescript-eslint/recommended"
                ],
            "parserOptions": {
                "project": "./tsconfig.json"
            },
            "rules": {
                "@typescript-eslint/no-non-null-assertion": "off",
                "@typescript-eslint/no-empty-function": "off",
                "no-empty": "off"
            }
        }
    ],
    "plugins": [
        "react",
        "@typescript-eslint"
    ]
}
